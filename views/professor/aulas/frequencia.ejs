    <title>Registro de Aula</title>
  </head>
  <body>

    <!-- barra de navegação -->
    <%- include('../partialMenu', {professor}) %>
    <div class="container">
        <div class="page-header">
            <h3>Registro de Aula</h3>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <form action="/professor/turmas/<%=turma.turma_id%>/<%= professorDisciplina.id %>/aulas/registrar" method="POST">
                    <div class="form-group">
                        <label for="">Disciplina:</label>
                        <br>
                        <input type="text" value="<%= professorDisciplina.disciplina.nome %>">
                        <br><br>
                        <label for="">Turma:</label>
                        <br>
                        <input type="text" value="<%= turma.serie %>">
                        <br><br>
                        <label for="">Turno:</label>
                        <br>
                        <input type="text" value="<%= turma.turno%>">
                        <br><br>
                        <label for="">Data:</label>
                        <br>
                        <input id="date" type="date" name="data">
                        <br><br>
                        <label for="">Descrição (assunto da aula):</label>
                        <br>
                        <textarea name="descricao" id="descricao" class="form-control" rows="5"></textarea>
                        <br> 
                        
                    </div>
                    
                    <button type="submit" class="btn btn-success"><strong>Salvar</strong></button>
                    <a type="submit" class="btn btn-warning" onclick="history.back()">Voltar</a>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    
</body>
</html>



<div class="container">
    <div class="page-header">
        <h3>Registro de Aula</h3>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <table class="table table-responsive-sm">
                <thead>
                    <tr>
                        <th scope="col">Matricula</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Sobrenome</th>                               
                        <th scope="col">Situação</th>
                    </tr>
                </thead>
                <tbody>
                    <% alunos.forEach(aluno => { %>
                        <% aluno = aluno.toJSON() %>  
                        <tr>
                            <td><%= aluno.matricula[0].matricula_id %></td>
                            <td><%= aluno.nome %></td>
                            <td><%= aluno.sobrenome %></td>
                            <td>
                                <input type="hidden" name="frequencia[<%=aluno.aluno_id%>][aluno_id]" value="<%=aluno.aluno_id%>">
                                <input type="radio" id="presente" name="frequencia[<%=aluno.aluno_id%>][frequencia]" value="presente">
                                Presente
                                <input type="radio" id="ausente" name="frequencia[<%=aluno.aluno_id%>][frequencia]" value="ausente">
                                Ausente  
                            </td>
                        </tr>
                    <% }) %>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>
