  <body>

    <!-- barra de navegação -->
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <img src="../../images/rocket.png" alt="">
                <span>Olá, Professor(a) <%= professor.nome %></span>
            </div>

            <div>
                <ul class="nav navbar-expand-lg">
                    <li><a href="/professor">Home</a></li>
                    <li><a href="#">Perfil</a></li>
                    <li><a href="/professor/horarios">Horários</a></li>
                    <li><a href="/professor/disciplinas">Disciplinas</a></li>                  
                    <li>
                        <a href="#">Sair
                          <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-door-open" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
