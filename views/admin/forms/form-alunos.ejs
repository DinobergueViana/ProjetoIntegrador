<div class="modal fade" id="criarAluno" tabindex="-1" aria-labelledby="criarAlunoLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="criarAlunoLabel">Cadastrar novo(a) Aluno(a)</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="formAluno" action="/admin/alunos/criar" method="POST">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Nome</label>
            <input type="text" class="form-control input-aluno" id="nome" name="nome">
          </div>
          <div class="form-group">
            <label for="nivel" class="col-form-label">Sobrenome</label>
            <input type="text" class="form-control input-aluno" id="sobrenome" name="sobrenome">
          </div>
          <div class="form-group">
            <label for="responsavel" class="col-form-label">Responsável</label>
            <input type="text" class="form-control input-aluno" id="responsavel" name="responsavel">
          </div>
          <div class="form-group">
            <label for="email" class="col-form-label">Email</label>
            <input type="email" class="form-control input-aluno" id="email" name="email">
          </div>
          <div class="form-group">
            <label for="endereco" class="col-form-label">Endereço</label>
            <input type="text" class="form-control input-aluno" id="endereco" name="endereco">
          </div>
          <div class="form-group">
            <label for="telefone" class="col-form-label">Telefone</label>
            <input type="text" class="form-control input-aluno" id="telefone" name="telefone">
          </div>
          <div id="btn-modal">
            <button id="btnAlunoEnviar" type="submit" class="btn btn-success" >Enviar</button>
          </div>    
        </form>
      </div>
    </div>
  </div>
</div>