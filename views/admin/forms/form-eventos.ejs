<div class="modal fade" id="criarEvento" tabindex="-1" aria-labelledby="criarEventoLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="criarEventoLabel">Cadastrar novo Evento</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="formEvento" action="/admin/eventos/criar" method="POST">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Data</label>
            <input type="date" class="form-control input-evento" id="data" name="data">
          </div>
          <div class="form-group">
            <label for="nivel" class="col-form-label">Descrição</label>
            <input type="text" class="form-control input-evento" id="descricao" name="descricao">
          </div>
          <div id="btn-modal">
            <button id="btnEventoEnviar" type="submit" class="btn btn-success" >Enviar</button>
          </div>    
        </form>
      </div>
    </div>
  </div>
</div>