<div class="container">
  <%- include('./forms/form-eventos') %>
  <div class="buscar">
    <form id="form-eventos" class="form-buscar" action="/admin/eventos/1/buscar">
      <input class="form-control" type="date" name="data">
      <button class="btn btn-light" type="submit">Buscar</button>
    </form>
    <button class="btn-new" id="btnNovoEvento" type="button" data-toggle="modal" data-target="#criarEvento" data-whatever="@mdo" data-toggle="tooltip" data-placement="right" title="Nova Eventos">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
      </svg>
    </button>
  </div>
  <div id="conteudoEventos">
    <table class="table-responsive" >
      <thead>
        <tr>
          <th>Data</th>
          <th>Descrição</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody id="dadosEventos"></tbody>
    </table>
  </div>
  <div class="modal fade" id="eventoEditar" tabindex="-1" aria-labelledby="ventoEditarLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="eventoEditarLabel"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="formEventoEditar" action="" method="POST">
            <div class="form-group">
              <label for="data" class="col-form-label">Data</label>
              <input type="text" class="form-control input-evento-editar" id="data" name="data">
            </div>
            <div class="form-group">
              <label for="descricao" class="col-form-label">Descrição</label>
              <textarea type="text" class="form-control input-evento-editar" id="descricao" name="descricao"></textarea>
            </div>
            <div id="btn-modal">
              <button id="btnEventoEnviar" type="submit" class="btn btn-success" >Enviar</button>
            </div>    
          </form>
        </div>
      </div>
    </div>
  </div>
</div>