<div class="container">
  <%- include('./forms/form-alunos') %>
  <div class="buscar">
    <form class="form-buscar" action="/admin/alunos/1/buscar">
      <input class="input-buscar" type="text" name="nome">
      <button class="btn btn-light" type="submit">Buscar</button>
    </form>
    <button class="btn-new" id="btnNovoAluno" type="button" data-toggle="modal" data-target="#criarAluno" data-whatever="@mdo" data-toggle="tooltip" data-placement="right" title="Nova Matrícula">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
      </svg>
    </button>
  </div>
  <div id="conteudoAlunos">
    <table class="table table-responsive">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Responsável</th>
          <th>Endereço</th>
          <th class="center">Ações</th>
        </tr>
      </thead>
      <tbody id="dadosAlunos"></tbody>
    </table>
  </div>
  
  <div class="modal fade" id="alunoEditar" tabindex="-1" aria-labelledby="alunoEditarLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="alunoEditarLabel"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="formAlunosEditar" action="" method="POST">
            <div class="form-group">
              <label for="nome" class="col-form-label">Nome</label>
              <input type="text" class="form-control input-aluno-editar" id="nome" name="nome">
            </div>
            <div class="form-group">
              <label for="sobrenome" class="col-form-label">Sobrenome</label>
              <input type="text" class="form-control input-aluno-editar" id="sobrenome" name="sobrenome">
            </div>
            <div class="form-group">
              <label for="responsavel" class="col-form-label">Responsável</label>
              <input type="text" class="form-control input-aluno-editar" id="responsavel" name="responsavel">
            </div>
            <div class="form-group">
              <label for="endereco" class="col-form-label">Endereço</label>
              <input type="text" class="form-control input-aluno-editar" id="endereco" name="endereco">
            </div>
            <div class="form-group">
              <label for="usuarioId" class="col-form-label">Usuario Id</label>
              <input type="text" class="form-control input-aluno-editar" id="usuarioId" name="usuarioId">
            </div>
            <div id="btn-modal">
              <button id="btnAlunoEditar" type="submit" class="btn btn-success" >
                Enviar
                <!-- <span class="sr-only">Loading...</span> -->
              </button>
            </div>    
          </form>
        </div> 
      </div>
    </div>
  </div>
</div>

