<div class="container">
  <%- include('./forms/form-turmas') %>
  <div id="alertErro" class="alert alert-danger" role="alert">
    <div class="textoErro">
      Erro! Verifique se os campos estão preenchidos corretamente.
    </div>
    <div class="iconFechar">
      <svg id="fecharAlert" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
      </svg>
    </div>
  </div>
  <div class="buscar">
    <form id="FormTurmasBuscar" class="form-buscar" action="/admin/turmas/buscar">
        <div id="form-content">
          <div class="checkbox-area">
            <input type="radio" name="opcao" required value="serie">
            <label>Série</label>
          </div>
          <div class="checkbox-area">
            <input type="radio" name="opcao" required value="turno">
            <label>Turno</label>
          </div>
          <input id="inputBuscarTurma" class="input-buscar" type="text" name="valor">
          <button id="btnTurmasBuscar" class="btn btn-light" type="submit">Buscar</button>
        </div>
    </form>
    <button class="btn-new" id="btnNovaTurma" type="button" data-toggle="modal" data-target="#criarTurma" data-whatever="@mdo" title="Nova Turma">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
      </svg>
    </button>
  </div>
  <div id="conteudoTurmas" >
    <table class="table-responsive">
      <thead>
        <tr>
          <th>Série</th>
          <th>Nível</th>
          <th>Turno</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody id="dadosTurmas"></tbody>
    </table>    
  </div>
  <div class="modal fade" id="turmaEditar" tabindex="-1" aria-labelledby="turmaEditarLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="turmaEditarLabel"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="formTurmaEditar" action="" method="POST">
            <div class="form-group">
              <label for="serie" class="col-form-label">Série</label>
              <input type="text" class="form-control input-turma-editar" id="serie" name="serie">
            </div>
            <div class="form-group">
              <label for="nivel" class="col-form-label">Nível</label>
              <input type="text" class="form-control input-turma-editar" id="nivel" name="nivel">
            </div>
            <div class="form-group">
              <label for="turno" class="col-form-label">Turno</label>
              <input type="text" class="form-control input-turma-editar" id="turno" name="turno">
            </div>
            <div id="btn-modal">
              <button id="btnTurmaEditar" type="submit" class="btn btn-success" >
                Enviar
                <!-- <span class="sr-only">Loading...</span> -->
              </button>
            </div>    
          </form>
        </div>
      </div>
    </div>
  </div>
</div>